                <div class="col medium-6 small-6 large-6">
                    <div class="col-inner text-center">
                        <p>
                            <a href="#" class="external" rel="nofollow" target="_blank">
                                <span style="font-size: 100%;">
                                    <img class="wp-image-28289 alignright" src="~/Assets/img/chat-facebook-for-custom.png" alt="" width="200" />
                                </span>
                            </a>
                        </p>
                    </div>
                </div>
                <div class="col medium-6 small-6 large-6">
                    <div class="col-inner text-left">
                        <p>
                            <a href="#" class="external" rel="nofollow" target="_blank">
                                <img class="wp-image-28290 alignleft" src="~/Assets/img/chat-ZALO.png" alt="" width="200" />
                            </a>
                        </p>
                    </div>
                </div>
                <style scope="scope"></style>
            </div>
